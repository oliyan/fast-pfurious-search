{
    "name": "pfgrep-ibmi",
    "displayName": "PFGREP Search for IBM i",
    "description": "Fast searching of IBM i physical file members using PFGREP utility",
    "version": "1.0.0",
    "publisher": "your-publisher-name",
    "repository": {
    "type": "git",
    "url": "https://github.com/oliyan/pfgrep-ibmi"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "ibmi",
        "as400",
        "pfgrep",
        "search",
        "rpg",
        "cobol"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pfgrep-ibmi.openSearch",
                "title": "PFGREP Search",
                "category": "PFGREP"
            },
            {
                "command": "pfgrep-ibmi.exportResults",
                "title": "Export Results",
                "category": "PFGREP",
                "icon": "$(export)"
            },
            {
                "command": "pfgrep-ibmi.clearResults",
                "title": "Clear Results",
                "category": "PFGREP",
                "icon": "$(clear-all)"
            },
            {
                "command": "pfgrep-ibmi.cancelSearch",
                "title": "Cancel Search",
                "category": "PFGREP",
                "icon": "$(stop)"
            }
        ],
        "keybindings": [
            {
                "command": "pfgrep-ibmi.openSearch",
                "key": "ctrl+alt+f",
                "mac": "cmd+alt+f",
                "when": "true"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "pfgrepResults",
                    "name": "PFGREP Results",
                    "when": "pfgrep-ibmi:hasResults"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "pfgrep-ibmi.exportResults",
                    "when": "view == pfgrepResults && pfgrep-ibmi:hasResults",
                    "group": "navigation@1"
                },
                {
                    "command": "pfgrep-ibmi.clearResults",
                    "when": "view == pfgrepResults && pfgrep-ibmi:hasResults",
                    "group": "navigation@2"
                }
            ]
        },
        "configuration": {
            "title": "PFGREP Search",
            "properties": {
                "pfgrep-ibmi.defaultLibraries": {
                    "type": "string",
                    "default": "",
                    "description": "Default libraries to search (comma-separated, supports wildcards). Example: MYLIB,PROD*,DEV*",
                    "scope": "application"
                },
                "pfgrep-ibmi.maxRecentSearches": {
                    "type": "number",
                    "default": 10,
                    "description": "Maximum number of recent search terms to remember",
                    "minimum": 1,
                    "maximum": 50,
                    "scope": "application"
                },
                "pfgrep-ibmi.maxResultWindows": {
                    "type": "number",
                    "default": 5,
                    "description": "Maximum number of simultaneous result windows",
                    "minimum": 1,
                    "maximum": 20,
                    "scope": "application"
                }
            }
        }
    },
    "activationEvents": [
        "onCommand:pfgrep-ibmi.openSearch"
    ],
    "extensionDependencies": [
        "HalcyonTechLtd.code-for-ibmi"
    ],
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.28.0",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0",
        "ts-loader": "^9.4.1"
    }
}